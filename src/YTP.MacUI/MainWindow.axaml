<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="YTP.MacUI.MainWindow"
    Title="YTP (mac)" Width="1000" Height="610" CanResize="True"
  Background="{DynamicResource WindowBackgroundBrush}" MinWidth="820" MinHeight="520">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Title / small toolbar -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <TextBlock Text="YTP Downloader" FontSize="16" VerticalAlignment="Center" />
      <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
        <Button x:Name="OpenQueueButton" Content="Queue" Width="80" Click="OpenQueueButton_Click" Classes="primary" />
        <Button x:Name="SettingsButton" Content="âš™" Width="36" Height="28" Click="SettingsButton_Click" />
      </StackPanel>
    </Grid>

    <!-- URL input -->
  <TextBox x:Name="UrlTextBox" Grid.Row="1" Height="120" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,8,0,8" Watermark="Paste YouTube URLs here, one per line..." Background="{StaticResource CardBackgroundBrush}" CornerRadius="8" />

    <!-- Actions row -->
    <Grid Grid.Row="2" Margin="0,4,0,8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Spacing="8">
        <Button x:Name="StartButton" Content="Start" Width="100" Click="StartButton_Click" Classes="primary" />
        <Button x:Name="PauseButton" Content="Pause" Width="90" Click="PauseButton_Click" IsEnabled="False" />
        <Button x:Name="EnqueueButton" Content="Enqueue" Width="90" Click="EnqueueButton_Click" />
        <Button x:Name="SkipButton" Content="Skip" Width="80" Click="SkipButton_Click" IsEnabled="False" />
        <Button x:Name="AbortButton" Content="Abort" Width="100" Click="AbortButton_Click" IsEnabled="False" />
      </StackPanel>

      <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="6">
        <ComboBox x:Name="OutputFormatCombo" Width="100" SelectionChanged="OutputFormatCombo_SelectionChanged">
          <ComboBoxItem>mp3</ComboBoxItem>
          <ComboBoxItem>mp4</ComboBoxItem>
        </ComboBox>
        <Button x:Name="PasteClipboardButton" Click="PasteClipboardButton_Click">Paste</Button>
        <Button x:Name="ClearUrlsButton" Click="ClearUrlsButton_Click">Clear</Button>
      </StackPanel>
    </Grid>

    <!-- Main content -->
    <Grid Grid.Row="3" Margin="0,4,0,8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="420" MinWidth="300" />
        <ColumnDefinition Width="12" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid Grid.Column="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="OutputDirText" Grid.Row="0" IsReadOnly="True" Background="{StaticResource CardBackgroundBrush}" CornerRadius="6" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,6" Spacing="6">
          <Button x:Name="ChooseOutputButton" Content="Choose..." Click="ChooseOutputButton_Click" />
          <Button x:Name="OpenFolderButton" Content="Open Folder" Click="OpenFolderButton_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2" Spacing="6">
          <TextBlock Text="Song:" />
          <TextBlock x:Name="CurrentSongText" FontWeight="Bold" MaxWidth="360" TextTrimming="CharacterEllipsis" />
          <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
            <TextBlock Text="Elapsed:" />
            <TextBlock x:Name="ItemElapsedText" Margin="6,0,12,0" />
            <TextBlock Text="Total:" />
            <TextBlock x:Name="TotalElapsedText" Margin="6,0,0,0" />
          </StackPanel>
        </StackPanel>

        <Border Grid.Row="3" Padding="6" CornerRadius="8" Background="{StaticResource CardBackgroundBrush}" VerticalAlignment="Stretch">
          <ScrollViewer x:Name="QueueScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
            <ItemsControl x:Name="QueueSummary" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Padding="6" Margin="0,4,0,4" CornerRadius="6">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                      </Grid.ColumnDefinitions>
                              <!-- replace circle with a compact numeric index to match Windows style -->
                              <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8" Margin="0,0,8,0">
                                <Border Width="28" Height="20" CornerRadius="4" Background="{DynamicResource AccentBrush}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                  <TextBlock Text="{Binding PlaylistIndex}" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" />
                                </Border>
                              </StackPanel>
                              <StackPanel Grid.Column="1">
                                <DockPanel>
                                  <TextBlock Text="{Binding Title}" FontWeight="Bold" TextTrimming="CharacterEllipsis" DockPanel.Dock="Left" />
                                  <!-- per-item index/total removed here because numbering is displayed on the left badge -->
                                </DockPanel>
                                <TextBlock Text="{Binding Channel}" FontSize="12" Foreground="{DynamicResource SubtleTextBrush}" />
                              </StackPanel>
                              <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                <Button Content="Pause" Click="QueueItem_Pause_Click" />
                                <Button Content="Remove" Click="QueueItem_Remove_Click" />
                              </StackPanel>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Border>

  <TextBlock x:Name="PlaylistInfoText" Grid.Row="4" FontWeight="SemiBold" Margin="0,6,0,6" />
  <ProgressBar x:Name="ItemProgress" Grid.Row="5" Minimum="0" Maximum="1" Height="14" CornerRadius="6" />
      </Grid>

  <Border Grid.Column="2" CornerRadius="10" Padding="12" Background="{DynamicResource TranslucentPanel}" BorderBrush="#00000010" BorderThickness="1">
        <!-- faux translucent panel: semi-transparent background to emulate acrylic -->
        <StackPanel>
          <TextBlock Text="Log" FontWeight="SemiBold" Margin="0,0,0,6" />
      <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <TextBox x:Name="LogText" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" FontFamily="Menlo" FontSize="12" Foreground="{DynamicResource LogForegroundBrush}" />
      </ScrollViewer>
        </StackPanel>
      </Border>
    </Grid>

    <!-- Footer -->
    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
      <!-- placeholder for small status -->
    </StackPanel>
  </Grid>
</Window>
