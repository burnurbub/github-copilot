<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="YTP.MacUI.App">
  <Application.Styles>
    <FluentTheme />
  </Application.Styles>

  <Application.Resources>
    <Color x:Key="AccentColor">#007AFF</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F2F2F7" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#6E6E73" />
    <SolidColorBrush x:Key="AccentBrush" Color="#007AFF" />
    <SolidColorBrush x:Key="TranslucentPanel" Color="#F8F8F8" Opacity="0.85" />
  </Application.Resources>
</Application>
