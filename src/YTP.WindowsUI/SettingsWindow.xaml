<ui:FluentWindow x:Class="YTP.WindowsUI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Settings" Height="350" Width="620" MinWidth="620" MinHeight="350" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- top: checkboxes -->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,0,0,10">
            <CheckBox x:Name="SkipLyricsCheck" Content="Disable lyrics scraping (faster)" Margin="0,4,0,4" />
            <CheckBox x:Name="SkipAlbumArtCheck" Content="Disable album art fetching" Margin="0,4,0,4" />
        </StackPanel>

        <!-- Theme -->
        <TextBlock Text="Theme:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="0,4,12,4" />
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,4">
            <ComboBox x:Name="ThemeCombo" Width="150" SelectionChanged="ThemeCombo_SelectionChanged">
                <ComboBoxItem>System</ComboBoxItem>
                <ComboBoxItem>Light</ComboBoxItem>
                <ComboBoxItem>Dark</ComboBoxItem>
            </ComboBox>
            <CheckBox x:Name="MatchSystemCheck" Content="Match system theme" Margin="8,0,0,0" VerticalAlignment="Center" Checked="MatchSystemCheck_Checked" Unchecked="MatchSystemCheck_Unchecked" />
        </StackPanel>

        <!-- Window sizing fields -->
        <TextBlock Text="Main min W/H:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="0,4,12,4" />
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,4">
            <TextBox x:Name="MainMinW" Width="60" Margin="0,0,6,0" />
            <TextBox x:Name="MainMinH" Width="60" Margin="0,0,12,0" />
            <TextBlock Text="Settings min W/H:" VerticalAlignment="Center" Margin="0,0,6,0" />
            <TextBox x:Name="SettingsMinW" Width="60" Margin="6,0,0,0" />
            <TextBox x:Name="SettingsMinH" Width="60" Margin="6,0,0,0" />
        </StackPanel>

        <!-- FFmpeg path with chooser -->
        <TextBlock Text="FFmpeg path:" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Margin="0,6,12,6" />
        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" Margin="0,4,0,4">
            <TextBox x:Name="FfmpegPathText" Width="320" Margin="0,0,6,0" />
            <Button x:Name="ChooseFfmpegBtn" Width="42" Height="28" Margin="0" Click="ChooseFfmpegBtn_Click" ToolTip="Choose ffmpeg.exe">
                <ui:SymbolIcon Symbol="Search20" />
            </Button>
        </StackPanel>

        <!-- Output dir with chooser -->
        <TextBlock Text="Output dir:" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" Margin="0,6,12,6" />
        <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal" Margin="0,4,0,4">
            <TextBox x:Name="OutputDirText" Width="320" Margin="0,0,6,0" />
            <Button x:Name="ChooseOutputBtn" Width="42" Height="28" Margin="0" Click="ChooseOutputBtn_Click" ToolTip="Choose output folder">
                <ui:SymbolIcon Symbol="Search20" />
            </Button>
        </StackPanel>

        <!-- Save / Cancel -->
        <StackPanel Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="SaveBtn" Width="100" Margin="8" Click="SaveBtn_Click" ToolTip="Save settings">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center" />
                    <TextBlock Text="Save" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button x:Name="CancelBtn" Width="90" Click="CancelBtn_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
