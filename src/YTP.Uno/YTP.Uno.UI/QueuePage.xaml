<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="YTP.Uno.UI.QueuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:YTP.Core.Models"
    mc:Ignorable="d">

    <Grid Padding="12" Background="{StaticResource WindowBackgroundBrush}">
        <StackPanel>
            <TextBlock Text="Queue" FontSize="18" FontWeight="Bold" Margin="0,0,0,8" />
            <ListView x:Name="QueueListView" ItemsSource="{x:Bind Items}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:VideoItem">
                        <controls:QueueItemControl ItemId="{x:Bind Id}" x:Name="QItem">
                            <controls:QueueItemControl.SetTitle>
                                {x:Bind Title}
                            </controls:QueueItemControl.SetTitle>
                        </controls:QueueItemControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>

</Page>
