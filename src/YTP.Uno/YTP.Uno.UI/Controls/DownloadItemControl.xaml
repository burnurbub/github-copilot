<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="YTP.Uno.UI.Controls.DownloadItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleText" Text="Title" FontWeight="Bold" />
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="6" Minimum="0" Maximum="100" />
    </Grid>

</UserControl>
