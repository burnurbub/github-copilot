<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="YTP.Uno.UI.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="12" Background="{StaticResource WindowBackgroundBrush}">
        <StackPanel Spacing="8">
            <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Output Folder:" VerticalAlignment="Center" />
                <TextBox x:Name="OutputFolderText" Width="420" />
                <Button Content="Choose" Click="ChooseOutput_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="FFmpeg Path:" VerticalAlignment="Center" />
                <TextBox x:Name="FfmpegPathText" Width="420" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Save" Click="Save_Click" />
                <Button Content="Cancel" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
